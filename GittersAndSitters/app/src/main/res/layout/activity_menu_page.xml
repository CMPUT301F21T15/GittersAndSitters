<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <Button
        android:id="@+id/nav_home"
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:text="Home Page"
        app:backgroundTint="#091823"
        app:layout_constraintBottom_toTopOf="@+id/nav_friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/nav_event_history"
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:text="Event History"
        app:backgroundTint="#091823"
        app:layout_constraintBottom_toTopOf="@+id/nav_requests"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_friends" />

    <Button
        android:id="@+id/nav_friends"
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:text="Friends"
        app:backgroundTint="#091823"
        app:layout_constraintBottom_toTopOf="@+id/nav_event_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_home" />

    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.494"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/nav_requests" />-->

    <Button
        android:id="@+id/nav_requests"
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:layout_gravity="center_horizontal"
        android:text="Friend Requests"
        app:backgroundTint="#091823"
        app:layout_constraintBottom_toTopOf="@+id/nav_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_event_history" />

    <Button
        android:id="@+id/nav_logout"
        android:layout_width="120dp"
        android:layout_height="67dp"
        android:text="Log Out"
        app:backgroundTint="#091823"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_requests"></Button>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="210dp"
        android:layout_height="190dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ht" />

</androidx.constraintlayout.widget.ConstraintLayout>
